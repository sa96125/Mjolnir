datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

model User {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String
  name      String?
}

model Article {
  uid        String  @id @default(cuid())
  created_at DateTime
  email      String
  password   Boolean
}